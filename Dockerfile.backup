# Dockerfile alternativo para React - m치s directo
FROM node:18-alpine AS build

WORKDIR /app

# Copiar package.json desde la subcarpeta comic-app
COPY comic-app/package*.json ./

# Instalar dependencias
RUN npm install

# Copiar el resto del c칩digo
COPY comic-app/ ./

# Hacer build de la aplicaci칩n React
RUN npm run build

# Etapa de producci칩n con Nginx
FROM nginx:alpine

# Copiar los archivos del build
COPY --from=build /app/build /usr/share/nginx/html

# Exponer puerto 80
EXPOSE 80

# Comando por defecto
CMD ["nginx", "-g", "daemon off;"]